{
  "name": "@easyhook/adapter-hono",
  "version": "1.2.0",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@easyhook/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "tags": [
      "type:adapter",
      "scope:easyhook"
    ],
    "sourceRoot": "packages/adapter-hono/src",
    "targets": {
      "typecheck": {
        "command": "tsc --noEmit -p packages/adapter-hono/tsconfig.lib.json"
      },
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/adapter-hono/dist",
          "main": "packages/adapter-hono/src/index.ts",
          "tsConfig": "packages/adapter-hono/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      }
    }
  },
  "dependencies": {
    "@easyhook/core": "^1.2.0",
    "@swc/helpers": "~0.5.11",
    "hono": "^4.11.4"
  },
  "devDependencies": {
    "vitest": "^4.0.17"
  }
}
